    "@testing-library/react": "^16.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "jsdom": "^26.0.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^6.1.0",
