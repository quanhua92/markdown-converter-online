{
  "name": "markdown-converter-online",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run server:dev\" \"pnpm run client:dev\"",
    "server:dev": "concurrently \"tsc --project server/tsconfig.json --watch\" \"nodemon server/dist/index.js\"",
    "server:start": "node server/dist/index.js",
    "client:dev": "vite --host 0.0.0.0",
    "client:build": "vite build",
    "start": "vite --port 3000",
    "build": "vite build && tsc --project server/tsconfig.json",
    "serve": "vite preview",
    "test": "vitest run"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-toast": "^1.2.14",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-router": "^1.128.3",
    "@tanstack/react-router-devtools": "^1.128.3",
    "@tanstack/router-plugin": "^1.128.3",
    "@types/marked": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "lucide-react": "^0.525.0",
    "marked": "^16.1.0",
    "mermaid": "^11.9.0",
    "multer": "^2.0.1",
    "next-themes": "^0.4.6",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.6"
  },
